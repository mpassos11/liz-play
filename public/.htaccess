<IfModule mod_rewrite.c>
    RewriteEngine On

    # Garante que a requisição não seja para um arquivo físico existente (imagem, css, js)
    RewriteCond %{REQUEST_FILENAME} !-f
    # Garante que a requisição não seja para um diretório físico existente
    RewriteCond %{REQUEST_FILENAME} !-d

    # Se não for um arquivo/diretório, reescreve a URL para index.php
    # [QSA] mantém a query string, [L] é a última regra
    RewriteRule ^(.*)$ index.php?url=$1 [L,QSA]
</IfModule>